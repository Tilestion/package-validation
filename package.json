{
  "name": "@tilestion/package-validation",
  "version": "0.0.1",
  "description": "Toollib for signing and validating tilestion packages",
  "keywords": [
    "tilestion",
    "package",
    "signing"
  ],
  "author": "Eliseo Cailloux",
  "license": "GPL-3.0-only",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tilestion/package-validation.git"
  },
  "bugs": {
    "url": "https://github.com/Tilestion/package-validation/issues"
  },
  "homepage": "https://github.com/Tilestion/package-validation#readme",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "tilestion-package-validation": "./dist/cli.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 0",
    "clean": "rimraf dist",
    "build:js": "bun build src/index.ts --outfile dist/index.js --target node --format esm && bun build src/cli.ts --outfile dist/cli.js --target node --format esm --banner \"#!/usr/bin/env node\"",
    "build:types": "tsc -p tsconfig.types.json",
    "build": "npm run clean && npm run build:js && npm run build:types",
    "prepack": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "rimraf": "^5.0.10",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@noble/post-quantum": "^0.5.4"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
